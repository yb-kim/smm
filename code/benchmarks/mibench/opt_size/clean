#! /usr/bin/env python
import os
import subprocess

cwd = os.getcwd()
directories = []
for path in os.listdir(cwd):
	if os.path.isdir(path):
		directories.append(path)
for directory in directories:
	os.chdir(directory)
	command = "make clean; smmmake --clean; rm -rf function-split"
	subprocess.call(command, shell=True)
	os.chdir(cwd)
